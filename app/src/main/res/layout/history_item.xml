<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="12dp"
    android:padding="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#F5FFF5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Row: Image + Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp"
            android:divider="@drawable/divider_line"
            android:showDividers="end">

            <ImageView
                android:id="@+id/historyImage"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_image"
                android:clipToOutline="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/historyPrediction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disease: Powdery Mildew"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:textSize="16sp"
                    android:maxLines="2" />

                <TextView
                    android:id="@+id/historyConfidence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confidence: 95.5%"
                    android:textSize="14sp"
                    android:textColor="@color/colorOnSecondary"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/historyTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ•“ 29 July 2025, 6:30 PM"
                    android:textSize="12sp"
                    android:textColor="#777777"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
