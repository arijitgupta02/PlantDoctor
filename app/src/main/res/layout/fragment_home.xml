<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leaf_background"
    android:padding="24dp">

    <!-- Greeting -->
    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ‘‹ Hello, Arijit!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:fontFamily="sans-serif-medium"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />



    <!-- App Logo -->
    <ImageView
        android:id="@+id/homeLogo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@id/greetingText"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:background="@drawable/rounded_image"
        android:contentDescription="App Logo"
        android:scaleType="centerCrop"
        android:clipToOutline="true" />

    <!-- App Name -->
    <TextView
        android:id="@+id/homeAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PlantDoctor"
        android:textColor="#4CAF50"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_below="@id/homeLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/weatherCard"
        android:layout_width="match_parent"
        android:layout_below="@id/homeAppName"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:strokeColor="@android:color/transparent"
        app:cardBackgroundColor="#F5FFF5">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Lottie Weather Background -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/weatherAnimation"
                android:layout_width="313dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:alpha="0.35"
                android:scaleType="fitXY"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <!-- Text Overlay -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp">

                <TextView
                    android:id="@+id/weatherInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ¦ï¸ Loading weather..."
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1B5E20"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/suggestionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ± Tips loading..."
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_marginTop="6dp"
                    android:textColor="#2E7D32"
                    android:fontFamily="sans-serif-light" />
            </LinearLayout>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/seasonalTipCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weatherCard"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:strokeColor="@android:color/transparent"
        app:cardBackgroundColor="#E6F4EA">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp">

            <!-- Seasonal Background Image -->
            <ImageView
                android:id="@+id/seasonCardBackground"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:visibility="gone" />

            <!-- Tip Text Overlaid or Below -->
            <TextView
                android:id="@+id/tvSeasonalTip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="16dp"
                android:text="ðŸŒ± Seasonal tip goes here..."
                android:textSize="15sp"
                android:textColor="#4CBF50"
                android:fontFamily="sans-serif-medium"/>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>




    <!-- Cards Row -->
    <LinearLayout
        android:id="@+id/cardRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seasonalTipCard"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:paddingHorizontal="8dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tipsCard"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#E8F5E9"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_tips"
                    android:contentDescription="Tips Icon"
                    app:tint="@color/dark_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tips"
                    android:textSize="14sp"
                    android:textColor="#2E7D32"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/historyCard"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#E8F5E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_history"
                    android:contentDescription="History Icon"
                    app:tint="@color/dark_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:textSize="14sp"
                    android:textColor="#2E7D32"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/aboutCard"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#E8F5E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_about"
                    android:contentDescription="About Icon"
                    app:tint="@color/dark_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textSize="14sp"
                    android:textColor="#2E7D32"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>


    <!-- Capture Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/captureButton"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_leaf_camera"
        android:contentDescription="Capture Leaf Image"
        app:backgroundTint="#4CAF50"
        app:tint="#FFFFFF" />
</RelativeLayout>
