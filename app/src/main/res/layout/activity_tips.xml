<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tipsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leaf_background"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- App Header -->
    <LinearLayout
        android:id="@+id/tipsContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/tipsLogo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/logo"
            android:background="@drawable/rounded_image"
            android:scaleType="centerCrop"
            android:clipToOutline="true" />

        <TextView
            android:id="@+id/tipsAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PlantDoctor"
            android:textColor="#4CAF50"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tipsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🌿 Smart Plant Tips"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginTop="16dp"
            android:fontFamily="monospace" />

        <!-- Weather Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/weatherTipsCard"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#E8F5E9">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/tipsWeatherAnimation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:alpha="0.3"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tipsWeatherInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🌦️ Weather Info"
                        android:textSize="18sp"
                        android:textColor="#1B5E20"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tipsLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📍 Loading location..."
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:textColor="#4CAF50"
                        android:fontFamily="sans-serif-light" />
                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tipsCard"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#F5FFF5">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Scrollable tips section -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/tipsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp" />
                </ScrollView>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4CAF50"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="-5dp" />

                <!-- Bottom hint -->
                <TextView
                    android:id="@+id/scrollHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔽 Swipe up for complete care guide"
                    android:textSize="14sp"
                    android:textColor="@color/colorOnSecondary"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="8dp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Speaker button top-right -->
            <ImageButton
                android:id="@+id/speakTipButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:contentDescription="Speak Tips"
                android:src="@drawable/ic_speaker"
                app:tint="@color/dark_green" />
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>



    <!-- Refresh Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/refreshTipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh Tips"
        app:icon="@drawable/ic_refresh"
        android:backgroundTint="@color/dark_green"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

</LinearLayout>
